# Staging Environment Variables for Cosmic Gardener Backend

# Environment type
ENVIRONMENT=staging

# Database configuration (will be overridden by AWS Parameter Store in production)
DATABASE_URL=postgresql://staging:staging@localhost:5432/cosmic_gardener_staging

# JWT secret (will be stored in AWS Secrets Manager in production)
JWT_SECRET=staging-jwt-secret-key-must-be-32-characters-or-longer

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# CORS settings
CORS_ALLOWED_ORIGINS=https://staging.cosmic-gardener.com

# Redis configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=15
CACHE_ENABLED=true

# Metrics configuration
METRICS_ENABLED=true
METRICS_NAMESPACE=cosmic_gardener_staging
METRICS_ENDPOINT=/metrics

# AWS configuration
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# Secrets management
SECRETS_PROVIDER=mixed
PARAMETER_STORE_PREFIX=/cosmic-gardener/staging/
SECRETS_MANAGER_PREFIX=cosmic-gardener/staging/

# Physics engine settings
PHYSICS_SIMD_THRESHOLD=12
PHYSICS_DIRECT_THRESHOLD=96

# Game loop settings
GAME_LOOP_TARGET_TPS=60
GAME_LOOP_MAX_BODIES=2000

# Database pool settings
DB_POOL_MAX_SIZE=15
DB_POOL_TIMEOUT=20

# Compression settings
COMPRESSION_ALGORITHM=lz4
COMPRESSION_THRESHOLD=100

# Logging settings
LOG_LEVEL=info
LOG_FORMAT=json
RUST_LOG=info
RUST_BACKTRACE=1

# Performance settings
CARGO_NET_RETRY=3
RUSTFLAGS="-C target-cpu=native"

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Monitoring settings
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false

# Security settings
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=120

# Backup settings
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=7

# Config file path (optional)
CONFIG_FILE=config/staging.toml