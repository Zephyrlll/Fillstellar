# Development Environment Variables for Cosmic Gardener Backend

# Environment type
ENVIRONMENT=development

# Database configuration
DATABASE_URL=postgresql://dev:dev@localhost:5432/cosmic_gardener_dev

# JWT secret (should be 32+ characters)
JWT_SECRET=development-jwt-secret-key-32-chars-long

# Server configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Redis configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10
CACHE_ENABLED=true

# Metrics configuration
METRICS_ENABLED=true
METRICS_NAMESPACE=cosmic_gardener_dev
METRICS_ENDPOINT=/metrics

# Physics engine settings
PHYSICS_SIMD_THRESHOLD=8
PHYSICS_DIRECT_THRESHOLD=64

# Game loop settings
GAME_LOOP_TARGET_TPS=60
GAME_LOOP_MAX_BODIES=1000

# Database pool settings
DB_POOL_MAX_SIZE=5
DB_POOL_TIMEOUT=30

# Compression settings
COMPRESSION_ALGORITHM=lz4
COMPRESSION_THRESHOLD=100

# Logging settings
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Config file path (optional)
# CONFIG_FILE=config/development.toml