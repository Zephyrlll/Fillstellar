# Production Environment Variables for Cosmic Gardener Backend
# IMPORTANT: This file should NOT contain actual secrets in production
# All secrets should be stored in AWS Secrets Manager or Parameter Store

# Environment type
ENVIRONMENT=production

# Database configuration (override with AWS Parameter Store)
DATABASE_URL=postgresql://placeholder:placeholder@localhost:5432/cosmic_gardener_prod

# JWT secret (stored in AWS Secrets Manager)
JWT_SECRET=OVERRIDE_WITH_AWS_SECRETS_MANAGER

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# CORS settings (production domains)
CORS_ALLOWED_ORIGINS=https://cosmic-gardener.com,https://www.cosmic-gardener.com

# Redis configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=25
CACHE_ENABLED=true

# Metrics configuration
METRICS_ENABLED=true
METRICS_NAMESPACE=cosmic_gardener_prod
METRICS_ENDPOINT=/metrics

# AWS configuration
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# Secrets management
SECRETS_PROVIDER=mixed
PARAMETER_STORE_PREFIX=/cosmic-gardener/prod/
SECRETS_MANAGER_PREFIX=cosmic-gardener/prod/

# Physics engine settings (optimized for production)
PHYSICS_SIMD_THRESHOLD=16
PHYSICS_DIRECT_THRESHOLD=128

# Game loop settings (production scale)
GAME_LOOP_TARGET_TPS=60
GAME_LOOP_MAX_BODIES=5000

# Database pool settings (production scale)
DB_POOL_MAX_SIZE=25
DB_POOL_TIMEOUT=10

# Compression settings (aggressive compression for production)
COMPRESSION_ALGORITHM=lz4
COMPRESSION_THRESHOLD=50

# Logging settings (production optimized)
LOG_LEVEL=warn
LOG_FORMAT=json
RUST_LOG=warn
RUST_BACKTRACE=0

# Performance settings (production optimized)
CARGO_NET_RETRY=5
RUSTFLAGS="-C target-cpu=native -C opt-level=3"

# Health check settings
HEALTH_CHECK_INTERVAL=15
HEALTH_CHECK_TIMEOUT=5

# Monitoring settings (full monitoring in production)
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=true

# Security settings (strict security in production)
ENABLE_CORS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Backup settings (aggressive backup in production)
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=2
BACKUP_RETENTION_DAYS=30

# CloudWatch settings
CLOUDWATCH_ENABLED=true
CLOUDWATCH_NAMESPACE=CosmicGardener
CLOUDWATCH_REGION=us-east-1

# Lightsail settings
LIGHTSAIL_ENABLED=true
LIGHTSAIL_REGION=us-east-1
LIGHTSAIL_SERVICE_NAME=cosmic-gardener-backend

# Config file path (optional)
CONFIG_FILE=config/production.toml