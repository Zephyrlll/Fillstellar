# Cosmic Gardener Backend Environment Configuration
# Copy this file to .env and modify the values as needed

# === Database Configuration ===
DATABASE_URL=postgresql://postgres:password@localhost:5432/cosmic_gardener
DATABASE_MAX_CONNECTIONS=20
DATABASE_MIN_CONNECTIONS=5
DATABASE_MAX_LIFETIME=3600
DATABASE_IDLE_TIMEOUT=600
DATABASE_SLOW_QUERY_THRESHOLD=1000

# === Cache Configuration ===
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20
REDIS_CONNECTION_TIMEOUT=5
REDIS_DEFAULT_TTL=3600
REDIS_MAX_POOL_SIZE=50

# === Server Configuration ===
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# === Security Configuration ===
JWT_SECRET=your-secret-key-here-change-in-production

# === CORS Configuration ===
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# === Logging Configuration ===
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/cosmic-gardener/app.log
LOG_MAX_FILE_SIZE=104857600
LOG_MAX_FILES=10

# === Physics Simulation Configuration ===
PHYSICS_GRAVITY_CONSTANT=6.67430e-11
PHYSICS_TIME_STEP=0.016
PHYSICS_MAX_BODIES_PER_SIMULATION=10000
PHYSICS_SPATIAL_GRID_SIZE=1000.0
PHYSICS_COLLISION_DETECTION_ENABLED=true
PHYSICS_N_BODY_OPTIMIZATION=true

# === WebSocket Configuration ===
WEBSOCKET_MAX_CONNECTIONS=10000
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_CLIENT_TIMEOUT=60
WEBSOCKET_MESSAGE_SIZE_LIMIT=65536
WEBSOCKET_RATE_LIMIT=100

# === Monitoring Configuration ===
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENDPOINT=http://localhost:9090/metrics

# === Development Configuration ===
# Uncomment for development
# RUST_LOG=debug
# RUST_BACKTRACE=1

# === Production Configuration ===
# Uncomment for production
# RUST_LOG=warn
# RUST_BACKTRACE=0

# === External Services ===
# Add your external API configurations here
# EXTERNAL_API_KEY=your-api-key-here
# EXTERNAL_API_URL=https://api.example.com

# === Backup Configuration ===
# BACKUP_ENABLED=true
# BACKUP_INTERVAL=86400
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=cosmic-gardener-backups
# BACKUP_S3_REGION=us-west-2

# === SSL/TLS Configuration ===
# TLS_ENABLED=false
# TLS_CERT_PATH=/path/to/cert.pem
# TLS_KEY_PATH=/path/to/key.pem

# === Authentication Providers ===
# OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
# OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret
# OAUTH_GITHUB_CLIENT_ID=your-github-client-id
# OAUTH_GITHUB_CLIENT_SECRET=your-github-client-secret

# === Email Configuration ===
# EMAIL_ENABLED=false
# EMAIL_SMTP_HOST=smtp.example.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=your-email@example.com
# EMAIL_SMTP_PASS=your-email-password
# EMAIL_FROM_ADDRESS=noreply@cosmic-gardener.com

# === File Storage Configuration ===
# STORAGE_TYPE=local
# STORAGE_LOCAL_PATH=./uploads
# STORAGE_S3_BUCKET=cosmic-gardener-assets
# STORAGE_S3_REGION=us-west-2
# STORAGE_S3_ACCESS_KEY=your-access-key
# STORAGE_S3_SECRET_KEY=your-secret-key

# === Game Configuration ===
# GAME_MAX_PLAYERS_PER_SAVE=1
# GAME_MAX_SAVES_PER_PLAYER=10
# GAME_AUTO_SAVE_INTERVAL=300
# GAME_MAX_CELESTIAL_BODIES=100000
# GAME_RESOURCE_GENERATION_MULTIPLIER=1.0
# GAME_EXPERIENCE_MULTIPLIER=1.0

# === Anti-Cheat Configuration ===
# ANTI_CHEAT_ENABLED=true
# ANTI_CHEAT_DETECTION_THRESHOLD=0.8
# ANTI_CHEAT_BAN_DURATION=86400
# ANTI_CHEAT_LOG_SUSPICIOUS_ACTIVITY=true

# === Performance Configuration ===
# PERFORMANCE_METRICS_ENABLED=true
# PERFORMANCE_SLOW_QUERY_THRESHOLD=1000
# PERFORMANCE_MEMORY_LIMIT=2147483648
# PERFORMANCE_CPU_LIMIT=80.0

# === Testing Configuration ===
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/cosmic_gardener_test

# === Development Tools ===
# RUST_ANALYZER_ENABLED=true
# CARGO_WATCH_ENABLED=true
# HOT_RELOAD_ENABLED=true