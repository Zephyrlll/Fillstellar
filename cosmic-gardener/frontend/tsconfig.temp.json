{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "outDir": "./",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "isolatedModules": true
  },
  "include": ["main.ts"],
  "exclude": ["js/utils.ts", "js/catalystSystem.ts", "js/websocket-integration.ts"]
}